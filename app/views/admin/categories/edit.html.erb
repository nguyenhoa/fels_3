<% provide(:title, 'Edit category') %>
<h1>Edit category</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for [:admin, @category] do |f| %>
     
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Submit", class: "btn btn-large" %>
    <% end %>
  </div>
</div>