<% provide(:title, 'Create a new category') %>
<h1>Create a new category</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for [:admin, @categories] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Create category", class: "btn btn-large" %>
    <% end %>
  </div>
</div>